<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Make sure this file are imported in .vcxitems -->
  <PropertyGroup>
    <ComAPISourcesDir>$(MSBuildThisFileDirectory)ComAPI</ComAPISourcesDir>
    <ComAPIIncludeDirs>$(ComAPISourcesDir);$(MSBuildThisFileDirectory)</ComAPIIncludeDirs>
    <!-- Expose own dir for other projects -->
    <PublicIncludeDirectories>$(ComAPIIncludeDirs);$(PublicIncludeDirectories)</PublicIncludeDirectories>
  </PropertyGroup>

  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>
        $(ComAPIIncludeDirs);
        %(AdditionalIncludeDirectories)
      </AdditionalIncludeDirectories>
      <PreprocessorDefinitions>
        %(PreprocessorDefinitions)
      </PreprocessorDefinitions>
    </ClCompile>
  </ItemDefinitionGroup>
</Project>