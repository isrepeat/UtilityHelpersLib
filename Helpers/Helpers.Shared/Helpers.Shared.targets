<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Make sure this file are imported in .vcxitems -->
  <PropertyGroup>
    <HelpersSourcesDir>$(MSBuildThisFileDirectory)Helpers</HelpersSourcesDir>
    <!-- Expose own dir for other projects -->
    <PublicIncludeDirectories>$(MSBuildThisFileDirectory);$(PublicIncludeDirectories)</PublicIncludeDirectories>
  </PropertyGroup>
  
  <ItemGroup>
    <HelpersCommonHeaders Include="$(HelpersSourcesDir)\common.h" />
    <HelpersCommonHeaders Include="$(HelpersSourcesDir)\HWindows.h" />
    <HelpersCommonHeaders Include="$(HelpersSourcesDir)\Callback.hpp" />
    <HelpersCommonHeaders Include="$(HelpersSourcesDir)\Callback_CLR.hpp" />
    <HelpersCommonHeaders Include="$(HelpersSourcesDir)\TokenContext.hpp" />
    <HelpersCommonHeaders Include="$(HelpersSourcesDir)\FunctionTraits.hpp" />
  </ItemGroup>

  <!-- Define macros -->
  <ItemDefinitionGroup>
    <ClCompile>
      <PreprocessorDefinitions>
        INSIDE_HELPERS_PROJECT;
        %(PreprocessorDefinitions)
      </PreprocessorDefinitions>
    </ClCompile>
  </ItemDefinitionGroup>
</Project>