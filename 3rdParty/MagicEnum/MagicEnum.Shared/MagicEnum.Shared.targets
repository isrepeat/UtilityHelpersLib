<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Make sure this file are imported in .vcxitems -->
  <PropertyGroup>
    <MagicEnumSourcesDir>$(MSBuildThisFileDirectory)MagicEnum</MagicEnumSourcesDir>
    <MagicEnumIncludeDirs>$(MagicEnumSourcesDir);$(MSBuildThisFileDirectory)</MagicEnumIncludeDirs>
    <!-- Expose own dir for other projects -->
    <PublicIncludeDirectories>$(MagicEnumIncludeDirs);$(PublicIncludeDirectories)</PublicIncludeDirectories>
  </PropertyGroup>
</Project>