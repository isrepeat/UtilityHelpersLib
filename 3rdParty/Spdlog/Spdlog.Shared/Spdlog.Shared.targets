<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Make sure this file are imported in .vcxitems -->
  <!-- ================ Import UtilityHelpersLibCommon.targets =====================-->
  <PropertyGroup>
    <RegExToCaptureUtilityHelpersLibDir>(.*\\)(UtilityHelpersLib)(\\.*)</RegExToCaptureUtilityHelpersLibDir>
    <UtilityHelpersLibSolutionDir>$([System.Text.RegularExpressions.Regex]::Replace('$(MSBuildThisFileDirectory)', $(RegExToCaptureUtilityHelpersLibDir), '$1$2' ))</UtilityHelpersLibSolutionDir>
  </PropertyGroup>
  <Import Project="$(UtilityHelpersLibSolutionDir)\UtilityHelpersLibCommon.targets" />
  <!-- ============================================================================== -->
  
  <PropertyGroup>
    <SpdlogSourcesDir>$(MSBuildThisFileDirectory)Spdlog</SpdlogSourcesDir>
    <SpdlogIncludeDirs>$(SpdlogSourcesDir);$(MSBuildThisFileDirectory)</SpdlogIncludeDirs>
    <!-- Expose own dir for other projects -->
    <PublicIncludeDirectories>$(SpdlogIncludeDirs);$(PublicIncludeDirectories)</PublicIncludeDirectories>
  </PropertyGroup>
  
  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>
        $(SpdlogIncludeDirs);
        %(AdditionalIncludeDirectories)
      </AdditionalIncludeDirectories>
      <PreprocessorDefinitions>
        SPDLOG_SOURCES;
        SPDLOG_WCHAR_FILENAMES;
        SPDLOG_WCHAR_TO_ANSI_SUPPORT;
        %(PreprocessorDefinitions)
      </PreprocessorDefinitions>
    <LanguageStandard>stdcpp20</LanguageStandard>
    </ClCompile>
  </ItemDefinitionGroup>
</Project>